<h1>Listado de beneficios</h1>

<table class="table table-bordered table-condensed">
  <tr>
    <th>Nombre</th>
    <th>Inicio</th>
    <th>Fin</th>
    <th>Negocio</th>
    <th>Tipo</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @benefits.each do |benefit| %>
  <tr>
    <td><%= benefit.name %></td>
    <td><%= benefit.begin_date %></td>
    <td><%= benefit.end_date %></td>
    <td><%= benefit.business.name unless benefit.business.nil? %></td>
    <td><%= benefit.benefit_type.name %></td>
	<td><%= link_to 'Mostrar', benefit, :class=>"btn btn-info" %></td>
	<td><%= link_to 'Modificar', edit_benefit_path(benefit), :class=>"btn btn-inverse" %></td>
	<td><%= link_to 'Elminiar', benefit, :class=>"btn btn-danger", method: :delete, data: { confirm: 'Are you sure?' } %></td>
  </tr>
<% end %>
</table>

<br />

<%= link_to 'Crear beneficio', new_benefit_path, :class=>"btn btn-success" %>
